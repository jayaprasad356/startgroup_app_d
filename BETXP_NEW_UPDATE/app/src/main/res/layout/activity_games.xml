<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back"
    tools:context=".games">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:cardBackgroundColor="@color/accent"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:id="@+id/back"
                    android:layout_margin="15dp"
                    app:cardElevation="5dp"
                    app:cardCornerRadius="90dp"
                    app:cardBackgroundColor="@color/md_black_1000"
                    android:outlineAmbientShadowColor="@color/md_white_1000"
                    android:outlineSpotShadowColor="@color/md_white_1000"
                    android:layout_height="wrap_content"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:tint="@color/accent"
                        android:src="@drawable/back"
                        android:layout_margin="10dp"
                        />

                </androidx.cardview.widget.CardView>



                <com.betplay.android.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="Select Game"
                    android:textColor="@color/font"
                    android:textSize="20sp" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_below="@id/toolbar"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/single"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="15dp"
                                    android:src="@drawable/single_icon"
                                    app:tint="@color/figma_red" />

                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Single"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/jodi"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="15dp"
                                    android:src="@drawable/jodi_icon"
                                    app:tint="@color/figma_red" />

                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Play Jodi"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/singlepatti"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="15dp"
                                    android:src="@drawable/singlepatti_icon"
                                    app:tint="@color/figma_red" />

                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Single Panna"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/doublepatti"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/accent"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="15dp"
                                    android:src="@drawable/doublepatti_icon"
                                    app:tint="@color/figma_red" />


                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Double Panna"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/tripepatti"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="5dp"
                                    android:src="@drawable/triplepatti_icon"
                                    app:tint="@color/figma_red" />


                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Triple Panna"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:id="@+id/halfsangam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="15dp"
                                    android:src="@drawable/ic_half_sangam"
                                    app:tint="@color/figma_red" />


                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Half Sangam"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/fullsangam"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="16dp"
                                    android:src="@drawable/ic_full_sangam"
                                    app:tint="@color/figma_red" />


                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Full Sangam"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:id="@+id/odd_even"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="15dp"
                                    android:src="@drawable/single_icon"
                                    app:tint="@color/figma_red" />


                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Odd / Even"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <androidx.cardview.widget.CardView
                            android:id="@+id/red_bracket"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/game_box"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/game_white_button"
                                    android:padding="15dp"
                                    android:src="@drawable/single_icon"
                                    app:tint="@color/figma_red" />


                                <com.betplay.android.latobold
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingTop="10dp"
                                    android:text="Red Bracket"
                                    android:textColor="@color/white"
                                    android:textSize="16sp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>



                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </RelativeLayout>





</RelativeLayout>