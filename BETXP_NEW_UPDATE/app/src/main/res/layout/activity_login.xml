<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/wave"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="#A9FFFFFF" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/logo_ard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/nav_menu"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="120dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/logo"

                />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/login_card"
            android:layout_below="@id/logo_ard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="20dp">


            <com.betplay.android.latobold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Login"
                android:paddingTop="60dp"
                android:paddingBottom="60dp"
                android:textColor="@color/font"
                android:textFontWeight="600"
                android:textSize="33sp" />

            <com.betplay.android.latonormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your mobile number to continue"
                android:textColor="@color/lightfont"
                android:visibility="gone" />


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:padding="15dp"
                    android:textSize="13sp" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="15dp"
                    android:textSize="13sp" />


            </com.google.android.material.textfield.TextInputLayout>





            <com.betplay.android.latobold
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:background="@drawable/blue_button"
                android:gravity="center_horizontal"
                android:text="Login"
                android:textColor="@color/font"
                android:textFontWeight="600"
                android:textSize="16sp" />


            <com.betplay.android.latobold
                android:id="@+id/forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:textFontWeight="600"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:textSize="16sp"
                android:text="Forgot password?"
                android:textColor="@color/font" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/create"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.betplay.android.latobold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textFontWeight="600"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:text="Don't have an account ?"
                android:textColor="@color/lightfont" />

            <com.betplay.android.latobold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textFontWeight="600"
                android:textSize="16sp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="Sign Up Now"
                android:textColor="@color/md_red_600" />

        </LinearLayout>

    </RelativeLayout>





</RelativeLayout>