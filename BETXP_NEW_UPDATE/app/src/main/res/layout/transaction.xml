<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/figma_green"
                app:cardCornerRadius="5dp"
                android:id="@+id/add_money"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_margin="5dp"
                    android:layout_height="25dp"
                    android:src="@drawable/deposit_home_icon"
                    app:tint="@color/md_white_1000"
                    />

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                app:cardBackgroundColor="@color/figma_red"
                android:visibility="gone"
                app:cardCornerRadius="5dp"
                android:id="@+id/deduct_money"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_margin="5dp"
                    android:layout_height="25dp"
                    android:src="@drawable/withdraw_home_icon"
                    app:tint="@color/md_white_1000"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                >

                <com.betplay.android.latobold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add money to wallet"
                    android:id="@+id/remark"
                    android:textColor="@color/font"
                    android:textSize="15sp"
                    />

                <com.betplay.android.latonormal
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00 AM 12 Mar 2019"
                    android:id="@+id/date"
                    android:textColor="@color/font"
                    android:textSize="12sp"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            >

            <com.betplay.android.latobold
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="-"
                android:textColor="@color/figma_green"
                android:textSize="18sp" />

            <com.betplay.android.latobold
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="200"
                android:textColor="@color/font"
                android:textSize="18sp" />

        </LinearLayout>

    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        >

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="wrap_content">

           <com.betplay.android.latonormal
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/date"
               android:text="02/11/2019"
               android:textColor="@color/font"
               android:layout_margin="10dp"
               android:layout_alignParentRight="true"
               />

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#3E000000"
               />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"
               >

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:id="@+id/amount_block"
                   android:layout_height="wrap_content">

                   <com.betplay.android.latonormal
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Amount"
                       android:textColor="@color/font"
                       android:layout_marginLeft="10dp"
                       />

                   <com.betplay.android.latobold
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="200"
                       android:textColor="@color/font"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/amount"
                       android:textSize="26sp"
                       />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="15dp"
                   android:gravity="right"
                   android:layout_toRightOf="@id/amount_block"
                   android:layout_alignParentRight="true"
                   android:layout_height="wrap_content">

                   <com.betplay.android.latonormal
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Narration"
                       android:textColor="@color/font"
                       android:gravity="right"
                       android:layout_marginLeft="10dp"
                       />

                   <com.betplay.android.latobold
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/remark"
                       android:text="Winning"
                       android:textColor="@color/font"
                       android:layout_marginLeft="10dp"
                       android:textSize="16sp"
                       />


               </LinearLayout>


           </RelativeLayout>




       </LinearLayout>


    </androidx.cardview.widget.CardView>



</LinearLayout>