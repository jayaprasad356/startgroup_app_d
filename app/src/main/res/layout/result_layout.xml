<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:id="@+id/layout"
        app:cardBackgroundColor="#fff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                >

                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:textColor="@color/lightfont"
                    />

                <com.betplay.smsattaapp.latobold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/figma_red"
                    android:id="@+id/name"
                    android:text="Milan Day"
                    android:textFontWeight="600"
                    android:textSize="20dp"
                    android:layout_gravity="top"
                    />

                <com.betplay.smsattaapp.latobold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/result"
                    android:text="XXX-X X-XXX"
                    android:textColor="@color/font"
                    android:textSize="20sp"
                    />

                <com.betplay.smsattaapp.latobold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/time_"
                    android:text="XXX-X X-XXX"
                    android:textColor="@color/figma_red"
                    android:textSize="17sp"
                    />

                <com.betplay.smsattaapp.latonormal
                    android:id="@+id/info"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/time_info"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerInParent="true"
                        android:adjustViewBounds="true"
                        android:src="@drawable/clock_clock"
                        app:tint="@color/figma_red" />


                    <com.betplay.smsattaapp.latonormal
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/font"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="Game Time"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/play_game"
                    android:paddingLeft="5dp"
                    android:gravity="center"
                    android:paddingRight="5dp"
                    >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/gama_play"
                        />

                    <com.betplay.smsattaapp.latonormal
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/font"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="Play Game"
                        />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22000000"
        />


</LinearLayout>